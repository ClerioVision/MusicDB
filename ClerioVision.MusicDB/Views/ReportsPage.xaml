<Page
    x:Class="ClerioVision.MusicDB.Views.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <!-- Page Title -->
            <TextBlock Text="Reports" Style="{StaticResource PageTitleTextStyle}"/>

            <!-- Report Controls -->
            <Grid Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Generate comprehensive album reports with full track listings and album art." 
                               TextWrapping="Wrap"
                               Opacity="0.7"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Generate Full Report" 
                                Command="{x:Bind ViewModel.GenerateFullReportCommand}"
                                Style="{StaticResource AccentButtonStyle}"/>
                        <Button Content="Clear Report" 
                                Command="{x:Bind ViewModel.ClearReportCommand}"
                                Visibility="{x:Bind ViewModel.ReportItems.Count, Mode=OneWay, Converter={StaticResource IntToBoolConverter}}"/>
                    </StackPanel>

                    <!-- Progress -->
                    <ProgressRing IsActive="{x:Bind ViewModel.IsGenerating, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.IsGenerating, Mode=OneWay}"/>

                    <!-- Error Message -->
                    <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToBoolConverter}}"
                             Severity="Error"
                             Title="Error"
                             Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"/>
                </StackPanel>
            </Grid>

            <!-- Report Output -->
            <StackPanel Spacing="16" 
                        Visibility="{x:Bind ViewModel.ReportItems.Count, Mode=OneWay, Converter={StaticResource IntToBoolConverter}}">
                
                <!-- Report Header -->
                <Grid Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{x:Bind ViewModel.ReportTitle, Mode=OneWay}" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{x:Bind ViewModel.ReportSummary, Mode=OneWay}" 
                                   TextWrapping="Wrap"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Grid>

                <!-- Album List -->
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.ReportItems, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Grid Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                                <StackPanel Spacing="12">
                                    <!-- Album Header -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Album Art -->
                                        <Border Grid.Column="0" 
                                                Width="120" Height="120" 
                                                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                                CornerRadius="4"
                                                Margin="0,0,16,0">
                                            <FontIcon Glyph="&#xE93C;" FontSize="48" Opacity="0.5"/>
                                        </Border>

                                        <!-- Album Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                            <TextBlock Text="{Binding AlbumTitle}" 
                                                       FontSize="20" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ArtistName}" 
                                                       FontSize="16"
                                                       Opacity="0.7"/>
                                            <StackPanel Orientation="Horizontal" Spacing="16" Opacity="0.6">
                                                <TextBlock>
                                                    <Run Text="{Binding TrackCount}"/>
                                                    <Run Text="tracks"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding FormattedTotalDuration}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Track List -->
                                    <ListView ItemsSource="{Binding Tracks}" 
                                              SelectionMode="None"
                                              IsItemClickEnabled="False">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Padding="4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding TrackNumber}" 
                                                               Opacity="0.6"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding TrackTitle}"/>
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding FormattedDuration}" 
                                                               Opacity="0.6"
                                                               HorizontalAlignment="Right"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
