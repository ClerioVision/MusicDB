<Page
    x:Class="ClerioVision.MusicDB.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <!-- Page Title -->
            <TextBlock Text="Search Library" Style="{StaticResource PageTitleTextStyle}"/>

            <!-- Search Controls -->
            <Grid Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <!-- Search Type Selector -->
                    <ComboBox Header="Search Type" 
                              SelectedIndex="{x:Bind ViewModel.SelectedSearchType, Mode=TwoWay}"
                              MinWidth="300">
                        <ComboBoxItem Content="Albums by Artist"/>
                        <ComboBoxItem Content="Tracks by Artist"/>
                        <ComboBoxItem Content="Albums by Track Title"/>
                        <ComboBoxItem Content="Tracks by Album"/>
                    </ComboBox>

                    <!-- Search Input -->
                    <AutoSuggestBox Header="Search Query"
                                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay}"
                                    PlaceholderText="Enter search term..."
                                    MinWidth="400"
                                    QueryIcon="Find"/>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Search" 
                                Command="{x:Bind ViewModel.SearchCommand}"
                                Style="{StaticResource AccentButtonStyle}"/>
                        <Button Content="Clear" 
                                Command="{x:Bind ViewModel.ClearSearchCommand}"/>
                    </StackPanel>

                    <!-- Result Count -->
                    <TextBlock Text="{x:Bind ViewModel.ResultCount, Mode=OneWay, Converter={StaticResource ResultCountConverter}}"
                               Visibility="{x:Bind ViewModel.ResultCount, Mode=OneWay, Converter={StaticResource IntToBoolConverter}}"
                               FontWeight="SemiBold"/>

                    <!-- Error Message -->
                    <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToBoolConverter}}"
                             Severity="Error"
                             Title="Error"
                             Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"/>
                </StackPanel>
            </Grid>

            <!-- Album Results -->
            <StackPanel Spacing="12" 
                        Visibility="{x:Bind ViewModel.AlbumResults.Count, Mode=OneWay, Converter={StaticResource IntToBoolConverter}}">
                <TextBlock Text="Album Results" Style="{StaticResource SectionHeaderTextStyle}"/>
                
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.AlbumResults, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Grid Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Album Art Placeholder -->
                                <Border Grid.Column="0" 
                                        Width="80" Height="80" 
                                        Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                        CornerRadius="4"
                                        Margin="0,0,16,0">
                                    <FontIcon Glyph="&#xE93C;" FontSize="32" Opacity="0.5"/>
                                </Border>

                                <!-- Album Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="{Binding AlbumTitle}" 
                                               FontWeight="SemiBold" 
                                               FontSize="16"/>
                                    <TextBlock Text="{Binding ArtistName}" 
                                               Opacity="0.7"/>
                                    <TextBlock Opacity="0.6">
                                        <Run Text="{Binding TrackCount}"/>
                                        <Run Text="tracks"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>

            <!-- Track Results -->
            <StackPanel Spacing="12"
                        Visibility="{x:Bind ViewModel.TrackResults.Count, Mode=OneWay, Converter={StaticResource IntToBoolConverter}}">
                <TextBlock Text="Track Results" Style="{StaticResource SectionHeaderTextStyle}"/>
                
                <ListView ItemsSource="{x:Bind ViewModel.TrackResults, Mode=OneWay}"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="{Binding TrackNumber}" 
                                           Opacity="0.6"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding TrackTitle}" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding AlbumTitle}" 
                                           Opacity="0.7"/>
                                <TextBlock Grid.Column="3" 
                                           Text="{Binding FormattedDuration}" 
                                           Opacity="0.6"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
