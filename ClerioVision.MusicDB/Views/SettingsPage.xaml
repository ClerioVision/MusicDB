<Page
    x:Class="ClerioVision.MusicDB.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16" MaxWidth="800">
            <!-- Page Title -->
            <TextBlock Text="Settings" Style="{StaticResource PageTitleTextStyle}"/>

            <!-- Database Settings -->
            <TextBlock Text="Database Configuration" Style="{StaticResource SectionHeaderTextStyle}"/>
            
            <Grid Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <!-- Connection String -->
                    <TextBox Header="Connection String" 
                             Text="{x:Bind ViewModel.ConnectionString, Mode=TwoWay}"
                             PlaceholderText="Host=localhost;Port=5432;Database=musiclibrary;Username=postgres;Password=yourpassword"
                             TextWrapping="Wrap"/>

                    <!-- Connection Status -->
                    <TextBlock Text="{x:Bind ViewModel.ConnectionStatus, Mode=OneWay}"
                               Foreground="{x:Bind ViewModel.ConnectionSuccessful, Mode=OneWay, Converter={StaticResource BoolToColorConverter}}"
                               FontWeight="SemiBold"/>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Test Connection" 
                                Command="{x:Bind ViewModel.TestConnectionCommand}"
                                IsEnabled="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"/>
                        <Button Content="Initialize Database" 
                                Command="{x:Bind ViewModel.InitializeDatabaseCommand}"
                                Style="{StaticResource AccentButtonStyle}"
                                IsEnabled="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"/>
                        <Button Content="Save Settings" 
                                Command="{x:Bind ViewModel.SaveSettingsCommand}"/>
                    </StackPanel>

                    <!-- Progress -->
                    <ProgressRing IsActive="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay}"/>

                    <!-- Error Message -->
                    <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToBoolConverter}}"
                             Severity="Error"
                             Title="Error"
                             Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"/>
                </StackPanel>
            </Grid>

            <!-- Help Text -->
            <Grid Style="{StaticResource CardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Database Setup Instructions" 
                               FontWeight="SemiBold" 
                               FontSize="16"/>
                    <TextBlock TextWrapping="Wrap" Opacity="0.8">
                        1. Install PostgreSQL from https://www.postgresql.org/download/
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Opacity="0.8">
                        2. Create a database named 'musiclibrary' (or your preferred name)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Opacity="0.8">
                        3. Update the connection string above with your database credentials
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Opacity="0.8">
                        4. Click "Test Connection" to verify the connection works
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Opacity="0.8">
                        5. Click "Initialize Database" to create the necessary tables
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- About -->
            <TextBlock Text="About" Style="{StaticResource SectionHeaderTextStyle}"/>
            
            <Grid Style="{StaticResource CardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Music Library v1.0" 
                               FontWeight="SemiBold" 
                               FontSize="16"/>
                    <TextBlock Text="A comprehensive music library management application for Windows." 
                               TextWrapping="Wrap"
                               Opacity="0.7"/>
                    <TextBlock Text="Built with WinUI 3, Entity Framework Core, and PostgreSQL" 
                               Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
